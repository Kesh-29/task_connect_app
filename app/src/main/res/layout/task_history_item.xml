<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/task_item_border"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/taskProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_profile"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:layout_marginTop="5sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/taskPostedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by: John Doe"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
        android:id="@+id/taskCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed at"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/2/2025"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>
